// app global css
@font-face
  font-family Domus
  font-weight 300
  src url(fonts/Domus_Light.otf)
@font-face
  font-family Domus
  font-weight 400
  src url(fonts/Domus.otf)
@font-face
  font-family Domus
  font-weight 200
  src url(fonts/Domus_Extralight.otf)
@font-face
  font-family Domus
  font-weight 100
  src url(fonts/Domus_Ultralight.otf)
@font-face
  font-family Domus
  font-weight 600
  src url(fonts/Domus_Semibold.otf)
@font-face
  font-family Domus
  font-weight 900
  src url(fonts/Domus_Extrabold.otf)
@font-face
  font-family Domus
  font-weight bold
  src url(fonts/Domus_Bold.otf)
*
  font-family Domus
  font-weight 700
  text-shadow: 1px -1px 6px rgba(152,150,150,0.4);
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  color: #042d42;

html
  body
    min-height: 100% !important;
    height: 100%;

.vuescroll-content{
  height: auto;
}
a, .links{
  text-decoration: none;
  color: #4faec1;
  text-shadow: none;
  transition: 0.5s;
}
a:hover, .links:hover{
  color: #042d42;
}
.vuescroll-vertical-bar{
  background: #778077!important;
}
.contentBlock, .contentSkills{
  padding: 20px 40px;
}
.sectionBlock{
  border: 1px solid #d9dad9;
  background: #dfe2e23d;
  border-radius: 4px;
  /*-webkit-box-shadow: inset 0px 0px 24px -2px rgba(184,182,184,0.39);*/
  /*-moz-box-shadow: inset 0px 0px 24px -2px rgba(184,182,184,0.39);*/
  /*box-shadow: inset 0px 0px 24px -2px rgba(184,182,184,0.39);*/
}
.hr {
  border: 1px solid #d4d4d4;
}
